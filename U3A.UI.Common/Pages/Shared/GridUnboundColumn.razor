@inherits DxGridCommandColumn

@code {

    [Parameter] public int ColumnMinWidth { get; set; }
    [Parameter] public string ColumnWidth { get; set; } = "4rem";

	// Hide parent parameters from the user
    new int Width { get; set; }
    new string? MinWidth { get; set; }


    protected override void OnInitialized()
    {
        base.OnInitialized();
        base.ShowInColumnChooser = false;
        base.NewButtonVisible = false;
        base.EditButtonVisible = false;
        base.DeleteButtonVisible = false;
        base.ClearFilterButtonVisible = false;
    }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        if (ColumnMinWidth > 0)  base.MinWidth = ColumnMinWidth;
       if (!string.IsNullOrWhiteSpace(ColumnWidth)) base.Width = ColumnWidth;
    }


}
