    bool isLeaveBusy;
    private async Task<int> ApplyStudentLeaveAsync(bool ForceAcceptLeave = false)
    {
        var result = 0;
        if (ClassAttendance == null) { return result; }
        if (isLeaveBusy) return result;
        isLeaveBusy = true;
        try
        {
            var attendance = (ForceAcceptLeave)
                                ? ClassAttendance
                                : ClassAttendance.Where(x => x.DateProcessed == null);
            foreach (var ac in attendance)
            {
                var leave = await BusinessRule.GetLeaveForPersonForCourseForClass(dbc, ac.Person, SelectedCourse, selectedDate.Date);
                if (leave != null)
                {
                    ac.AttendClassStatusID = (int)AttendClassStatusType.AbsentFromClassWithApology;
                    ac.AttendClassStatus = ClassAttendanceStatus.Find(x => x.ID == ac.AttendClassStatusID);
                    ac.DateProcessed = DateTime.Now;
                    ac.Comment = leave.Reason;
                    result++;
                }
            }
        }
        finally { isLeaveBusy = false; }
        return result;
    }

