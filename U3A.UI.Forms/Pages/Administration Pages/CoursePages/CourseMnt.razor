              BodyCssClass="h-100"
              Closing="@((WindowClosingEventArgs e) => e.Cancel = !isPreviewReady)"
              Closed="@(() => isPreviewOpen = false)"
              HeaderText="Preview">
        <BodyTextTemplate>
