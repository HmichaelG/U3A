                    </EditFormTemplate>
                </DxGrid>
            </ContentTemplate>
        </FullScreen>
    }

    <DxWindow @ref=@previewWindow Width="60vw"
              Visible=false
              HorizontalAlignment="HorizontalAlignment.Center"
              VerticalAlignment="VerticalAlignment.Center"
              Height="90vh"
              AllowResize="true"
