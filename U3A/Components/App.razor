<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link id="theme" href="_content/DevExpress.Blazor.Themes/office-white.bs5.css" rel="stylesheet" asp-append-version="true" />

    <link href="_content/DevExpress.Blazor.RichEdit/dx-blazor-richedit.bs5.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="_content/DevExpress.Blazor.Reporting.Viewer/css/dx-blazor-reporting-components.bs5.css" asp-append-version="true">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

    <link href="_content/BlazorCaptcha/captcha.css" rel="stylesheet" />

    <link rel="apple-touch-icon" href="/favicon/apple-touch-icon.png">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="icon" type="image/ico" href="/favicon/favicon.ico">
    <link rel="manifest" href="/favicon/site.webmanifest">

    <link rel="stylesheet" href="css/site.css" />
    <link href="U3A.styles.css" rel="stylesheet" />

    <HeadOutlet @rendermode="@RenderModeForPage" />

</head>

<body>

    <script type="text/javascript" src="/js/MyFunctions.js"></script>
    <script>navigator.serviceWorker.register('service-worker.js');</script>
    <script type="text/javascript" src="/js/timeout.js"></script>
    <script src="https://secure.ewaypayments.com/scripts/eCrypt.min.js"></script>

    <script>
        function GetTimezoneOffset() {
            // Returns the time difference in minutes between UTC time and local time.
            return new Date().getTimezoneOffset();
        }
    </script>
    <script>

        window.triggerFileDownload = (fileName, url) => {
            const anchorElement = document.createElement('a');
            anchorElement.href = url;
            anchorElement.download = fileName ?? '';
            anchorElement.click();
            anchorElement.remove();
        }
    </script>




    <Routes @rendermode="@RenderModeForPage" />
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? RenderModeForPage => HttpContext.Request.Path.StartsWithSegments("/Account")
        ? null
        : InteractiveServer;
}
